    "ruff.lineLength": 79,
    "ruff.fixAll": true,
    "ruff.importStrategy": "fromEnvironment",
    "ruff.organizeImports": false,
    // General formatting tools settings
    "betterAlign.indentBase": "activeline",
    "betterAlign.surroundSpace": {
